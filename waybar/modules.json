{
  "battery": {
    "format": "{icon}  {capacity}%",
    "format-icons": [
      "<span color='#DD7EBD'>   </span>",
      "<span color='#DD7EBD'>   </span>",
      "  ",
      "  ",
      "<span color='#7EDD87'>   </span>"
    ],
    "tooltip": false
  },
  "custom/power": {
    "format": "<span color='#84A6C5'> ⏻ </span>",
    "tooltip": false
  },
  "wlr/taskbar": {
    "format": "{icon}",
    "iconSize": 5,
    "on-click": "maximize"
  },
  "cpu": {
    "interval": 1,
    "format": "{icon} {usage}% ",
    "format-icons": [
      "<span color='#7EDD87'>  </span>",
      "<span color='#DD7EBD'>  </span>"
    ]
  },
  "memory": {
    "interval": 30,
    "format": "    {used:0.1f}G/{total:0.1f}G",
    "max-length": 20
  },
  "tray": {
    "icon-size": 17,
    "spacing": 20
  },
  "clock": {
    "format": "📅 {:%A, %B %d, %Y   🕐 %H:%M}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "year",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#ffead3'><b>{}</b></span>",
        "days": "<span color='#ecc6d9'><b>{}</b></span>",
        "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
        "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
        "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
      }
    }
  },
  "pulseaudio": {
    "format": "{icon}",
    "format-bluetooth": "{volume}% {icon}",
    "format-muted": "<span color='#DD7EBD'>  </span>",
    "format-icons": {
      "headphone": "  ",
      "hands-free": "  ",
      "headset": "  ",
      "phone": "  ",
      "portable": "  ",
      "car": "   ",
      "default": [
        "  ",
        "  "
      ]
    },
    "scroll-step": 1,
    "on-click": "pavucontrol",
    "ignored-sinks": [
      "Easy Effects Sink"
    ]
  }
}
